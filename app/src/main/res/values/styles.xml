<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Remove the action bar on activities that use the added toolbar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- PlayActivity theme for tablet -->
    <style name="AppTheme.ThemeWhenLarge" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <!-- Remove actionBar since the activity provides it's own -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- set actionBar and statusBar colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- styles implemented for transitions -->
    <style name="AppTheme.Main" parent="AppTheme.NoActionBar"/>

    <style name="AppTheme.List" parent="AppTheme.NoActionBar"/>

    <style name="AppTheme.Player" parent="AppTheme.NoActionBar"/>


    <!-- Set max height/width of player on tablets -->
    <style name="max_player_dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PlayerTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
